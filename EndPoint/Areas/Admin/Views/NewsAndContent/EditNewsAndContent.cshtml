@{
    ViewData["Title"] = "ثبت اخبار و محتوا";
}

@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
    <link href="~/lib/cropperjs/cropper.css" rel="stylesheet" />
    <link href="~/lib/TagsInput/bootstrap-tagsinput.css" rel="stylesheet" />
}

    @section PageHeader{
    <section class="content-header">
        <h1>
            ثبت اخبار و محتوا
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/NewsAndContent/Index"><i></i> ثبت اخبار و محتوا</a></li>
            <li class="active"><a href="/Admin/NewsAndContent/EditNewsAndContent@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i> ثبت فعالیت شرکت ها</a></li>
        </ol>
    </section>
}

    <div class="row">
        <section class="col-lg-12 col-md-12">
            <div class="box box-info">
                <div class="box-header">
                    @*<i class="fa fa-cloud"></i>*@
                    <h3 class="box-title">
                        <div class="portlet-title">
                            <div class="caption font-green-haze">
                                @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                            </div>
                            <div class="tools">
                                <a href="" class="collapse" data-original-title="" title="">
                                </a>
                            </div>
                        </div>
                    </h3>
                    <!-- tools box -->
                    <div class="pull-left box-tools">
                        <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <!-- /. tools -->
                </div>
                <div class="box-body" style="">


                    <div class="form-horizontal">
                        <input type="hidden" value="0" id="ContentId" name="ContentId" />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="">
                                        عنوان
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" id="Title" name="Title" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="">
                                        انتخاب نوع محتوا
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select id="KindOfContent" name="KindOfContent" class="form-control select2" style="width:100% !important;"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="">
                                        متن
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <textarea id="Body" name="Body" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        تصویر محتوا
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">

                                        <input type="hidden" id="hid_ContentPic" value="" />
                                        <input type="file" name="ContentPic" id="ContentPic" accept="image/*" onchange="onChangePicCropper(this,1200,'imgUpload_ContentPic','hid_ContentPic');" />
                                        <img src="" width="150" class="img-thumbnail" id="imgUpload_ContentPic" />

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="">
                                        خلاصه متن
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <textarea id="Summary" name="Summary" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="">
                                        کلمات کلیدی
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" id="Keywords" name="Keywords" class="form-control" />
                                        <span class="RequiredLabel">نکته : کلمات کلیدی را با دکمه Enter از یکدیگر متمایز کنید به عنوان مثال : </span><span class="tag label label-info">تست&nbsp;<i class="fa fa-remove"></i></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="">
                                        توضیحات کلیدی
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <textarea id="MeteDesc" name="MeteDesc" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="">
                                        لینک مستقیم
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" id="DirectLink" name="DirectLink" class="form-control" placeholder="به عنوان مثال : AboutUs (انگلیسی)" />
                                        <p style="font-size:12px;color:gray;">برای برگه هایی از محتوای لندینگ که نیاز به لینک مستقیم دارند</p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2">
                                    </div>
                                    <div class="col-md-9">
                                        <button title="ثبت" class="btn btn-info fontForAllPage" onclick="Web.NewsAndContent.SaveNewsAndContent(this);">
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </section>
    </div>

    @section Scripts {
    <script src="~/css/GlobalAreas/bower_components/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/lib/cropperjs/cropper.js" asp-append-version="true"></script>
    <script src="~/lib/cropperjs/cropperOpp.js" asp-append-version="true"></script>
    <script src="~/lib/TagsInput/bootstrap-tagsinput.min.js"></script>
    <script>
        Web.NewsAndContent.InitNewsAndContent(@ViewBag.id);
        $(function() {
            setTimeout(() => { 
                $("a[title='Text direction from right to left']").click();
            }, 1000);
        });
    </script>
}
