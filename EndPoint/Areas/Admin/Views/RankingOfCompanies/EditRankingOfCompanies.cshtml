
@{
    ViewData["Title"] = "ثبت امتیاز شرکت";
}

@section Styles{
    <link rel="stylesheet" href="~/lib/JQueryDatePickerPluginForPersian/css/persianDatepicker-default.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
}

@section PageHeader{
    <section class="content-header">
        <h1>
            ثبت امتیاز شرکت
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/RankingOfCompanies/Index"><i></i>امتیاز شرکت</a></li>
            <li class="active"><a href="/Admin/RankingOfCompanies/EditRankingOfCompanies@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i>ثبت امتیاز شرکت</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">


                <form action="" id="frmFormMain" method="post">
                    <div class="form-horizontal">

                        <input type="hidden" value="0" id="RankingId" name="RankingId" />

                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        نام شرکت
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select name="ComanyId" id="ComanyId" class="form-control select2" style="width:100% !important;"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        تاریخ انتشار
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" name="PublishDate" id="PublishDate" class="form-control DatePicker" onkeypress = "return InputNoType(event);" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        رتبه بلند مدت
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" name="LongTermRating" id="LongTermRating" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        رتبه کوتاه مدت
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" name="ShortTermRating" id="ShortTermRating" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        چشم انداز
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" name="Vision" id="Vision" class="form-control" />
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-3">

                                    </div>
                                    <div class="col-md-9">
                                        <button title="ثبت" class="btn btn-info fontForAllPage" onclick="Web.RankingOfCompanies.SaveRankingOfCompanies(this);">
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        فایل بیانیه مطبوعاتی
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-8">
                                        <input type="file" name="Result_Final_PressRelease" id="PressRelease" accept="image/*,.pdf,.xlsx," />
                                        <div id="divDownload"></div>
                                        <span>پسوندهای مجاز: All Images, Pdf, xls Or xlsx</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        فایل خلاصه رتبه بندی
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-8">
                                        <input type="file" name="Result_Final_SummaryRanking" id="SummaryRanking" accept="image/*,.pdf,.xlsx," />
                                        <div id="divDownload_SummaryRanking"></div>
                                        <span>پسوندهای مجاز: All Images, Pdf, xls Or xlsx</span>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </form>


            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/lib/JQueryDatePickerPluginForPersian/js/persianDatepicker.js" asp-append-version="true"></script>
    <script src="~/css/GlobalAreas/bower_components/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>
    <script>
        Web.RankingOfCompanies.InitRankingOfCompanies(@ViewBag.id);
    </script>
}
