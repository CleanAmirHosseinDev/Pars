}

@section Styles{

}

@section PageHeader{
    <section class="content-header">
        <h1>
            درباره ما
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/AboutUs/Index"><i></i>درباره ما</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">


                <form action="/Admin/AboutUs/Index" id="frmFormMain" method="post">
                    <div class="form-horizontal">

                        <input type="hidden" value="0" id="AboutUsId" name="AboutUsId" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        نام شرکت
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="CompanyName" id="CompanyName" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button title="ثبت" class="btn btn-info fontForAllPage" onclick="Web.AboutUs.SaveAboutUs(this);">
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6"></div>
                        </div>

                    </div>
                </form>


            </div>
        </div>
    </section>
</div>

@section Scripts {    
    <script>
        Web.AboutUs.InitAboutUs(@ViewBag.id);
    </script>
}
