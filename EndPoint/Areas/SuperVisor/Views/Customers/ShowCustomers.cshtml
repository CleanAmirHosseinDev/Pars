
@{
    ViewData["Title"] = "نمایش مشتری";
}

@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
}

@section PageHeader{
    <section class="content-header">
        <h1>
            نمایش مشتری
        </h1>
        <ol class="breadcrumb">
            <li><a href="/SuperVisor"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/SuperVisor/Customers/Index"><i></i> مشتریان</a></li>
            <li class="active"><a href="/SuperVisor/Customer/ShowCustomers@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i>نمایش مشتری</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">

                <div class="form-horizontal">
                    <div style=" border: 2px solid #00c0ef; padding: 30px; border-radius: 5px; text-align: center; margin-bottom: 20px">                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        نام شرکت
                                        
                                    </label>
                                    <div class="col-md-8">                                        
                                        <span id="CompanyName"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        نام مدیر عامل
                                        
                                    </label>
                                    <div class="col-md-8">                                        
                                        <span id="CeoName"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        موبایل مدیر عامل
                                        
                                    </label>
                                    <div class="col-md-8">                                        
                                        <span id="CeoMobile"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        کد ملی مدیر عامل
                                        
                                    </label>
                                    <div class="col-md-8">                                        
                                        <span id="CeoNationalCode"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        شماره ثبت
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="EconomicCode"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        شناسه ملی  شرکت
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="NationalCode"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        نام نماینده شرکت
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="AgentName"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        شماره نماینده شرکت
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="AgentMobile"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        اسامی امضاکنندگان مجاز
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <p id="NamesAuthorizedSignatories"></p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        تعداد کارکنان شرکت
                                        
                                    </label>
                                    <div class="col-md-8">                                        
                                        <p id="CountOfPersonal"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        نحوه آشنایی با شرکت
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="HowGetKnowCompanyId"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        نوع شرکت
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="KindOfCompanyId"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        ایمیل
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="Email"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        شماره تماس
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="Tel"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        کد پستی
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="PostalCode"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        آدرس
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <p id="AddressCompany"></p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        درآمد عملیاتی بر اساس صورت های مالی حسابرسی شده
                                        
                                    </label>
                                    <div class="col-md-8">
                                        <span id="AmountOsLastSales"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        Web.Customer.InitCustomer(@ViewBag.id);
    </script>
}