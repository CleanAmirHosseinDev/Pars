@{
    ViewData["Title"] = "مشاهده گردش درخواست";
}


@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/Views/TimeLine.css" type="text/css" />
}

@section PageHeader{
    <section class="content-header">
        <h1>
            مشاهده گردش درخواست
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Customer"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Customer/RequestForRating/Index"><i></i>درخواست ها</a></li>
            <li class="active"><a href="/Customer/RequestForRating/RequestReferences@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i> مشاهده گردش درخواست ها</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">


                <form action="/Customer/RequestForRating/Index" id="frmFormMain" method="post">
                    <div class="form-horizontal">
                        <input type="hidden" value="0" id="RequestId" name="RequestId" />


                        <div>

                            <div class="customDiv darkBackground">
                                <div class="timeline-centered" id="TimeLine"> 

                                </div>
                            </div>
                        </div>
                    </div>
                </form>


            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        Web.RequestForRating.InitRequestReferences(@ViewBag.id);
   </script>
}
