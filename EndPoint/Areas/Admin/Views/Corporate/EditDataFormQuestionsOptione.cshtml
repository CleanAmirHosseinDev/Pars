
@{
    ViewData["Title"] = "ثبت یک گزینه";
}

@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
}

@section PageHeader{
    <section class="content-header">
        <h1>
            ثبت گزینه
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/Corporate/DataFormQuestionsOptione"><i></i>لیست گزینه ها</a></li>
            <li><a href="/Admin/Corporate/DataFormQuestionsOptione@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i>گزینه</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">


                <form action="/Corporate/DataFormQuestionsOptione" id="frmFormMain" method="post">
                    <div class="form-horizontal">

                        <input type="hidden" value="@ViewBag.id" id="Id" name="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        متن گزینه
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="Text" id="Text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        مرتبط به سوال
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select name="DataFormQuestionsId" id="DataFormQuestionsId" class="form-control select2" style="width:100% !important;">
                                        </select>
                                        <span id="DataFormQuestionsText" style="color:green"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        ظریب ارزش گزینه
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="Ratio" id="Ratio" onkeypress="return TextBoxOnlyNumberFloat(event);" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-9">
                                        <button title="ثبت" class="btn btn-info fontForAllPage" onclick="Web.Corporate.SaveDataFormQuestionsOptione(this);">
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/css/GlobalAreas/bower_components/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>    
    <script>
        Web.Corporate.InitDataFormQuestionsOptione(@ViewBag.id);
    </script>
}
