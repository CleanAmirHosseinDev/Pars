
@{
    ViewData["Title"] = "ثبت متن قراردادها ";
}

@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
}

@section PageHeader{
    <section class="content-header">
        <h1>
            ثبت متن قراردادها
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/Contract/Index"><i></i>متن قراردادها </a></li>
            <li class="active"><a href="/Admin/Contract/EditContract@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"></a><i></i> ثبت فعالیت شرکت ها</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">


                <form action="/Admin/Contract/Index" id="frmFormMain" method="post">
                    <div class="form-horizontal">

                        <input type="hidden" value="0" id="ContractId" name="ContractId" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="">
                                        گروه خدمات
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select name="KinfOfRequest" id="KinfOfRequest" class="form-control select2" style="width:100% !important;"></select>

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2" for="">
                                        متن قرارداد
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <textarea class="form-control" name="ContractText" id="ContractText"></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2">
                                    </div>
                                    <div class="col-md-9">
                                        <button title="ثبت" class="btn btn-info fontForAllPage" onclick="Web.Contract.SaveContract(this);">
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>


            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/css/GlobalAreas/bower_components/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>        
        Web.Contract.InitContract(@ViewBag.id);
    </script>
}
