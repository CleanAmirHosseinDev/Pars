                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">


                <form action="/Customer/RequestForRating/Index" id="frmFormMain" method="post">
                    <div class="form-horizontal">
                        <h5 style="font-weight:bolder"> لطفا نکات اصلاحی خود را ذکر کنید</h5>
                      
                        <div style="width:100%;border:1px solid silver;min-height:400px;margin-bottom:15px">

                        </div>
                        <input type="hidden" value="0" id="RequestId" name="RequestId" />

                        <div class="row">
                            <div class="col-md-6">


                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button title="ثبت و ارسال به کارشناس مربوطه" class="btn btn-info fontForAllPage" onclick="Web.RequestForRating.Contract(this);">
