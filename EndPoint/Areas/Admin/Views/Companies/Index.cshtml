

@{
    ViewData["Title"] = " شرکت ها";
}

@section PageHeader{
    <section class="content-header">
        <h1>
             شرکت ها
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/Companies/Index"><i></i>  شرکت ها</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">

                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <span id="TotalRowRep" name="TotalRowRep"> کادر جستجو </span>
                    </div>
                    <div class="panel-body">
                        <div class="row" style="margin-bottom: 5px;">
                            <div class="col-md-6">
                                <input type="text" id="txtSearch" name="txtSearch" class="form-control fontForAllPage BorderRadius_30" style="width:100%;" placeholder="جستجو" onkeydown="Web.Companies.TextSearchOnKeyDown(event);" />
                            </div>
                            <div class="col-md-2">
                                <select class="form-control BorderRadius_30" id="cboSelectCount" name="cboSelectCount">
                                    <option value="5">
                                        5
                                    </option>
                                    <option value="10" >
                                        10
                                    </option>
                                    <option value="20">
                                        20
                                    </option>
                                    <option value="50" selected="selected">
                                        50
                                    </option>
                                    <option value="100">
                                        100
                                    </option>
                                    <option value="150">
                                        150
                                    </option>
                                    <option value="200">
                                        200
                                    </option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-primary fontForAllPage" type="button" onclick="Web.Companies.FilterGrid();" title="جستجو">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <a href="/Admin/Companies/EditCompanies" class="btn btn-success fontForAllPage" style="margin-bottom:10px">
                    <i class="fa fa-plus"></i>
                    افزودن
                </a>


                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    عنوان
                                </th>
                                <th>نام شرکت</th>
                                <th>گروه شرکت</th>
                                <th>نوع شرکت</th>
                            </tr>
                        </thead>

                        <tbody id="tBodyList">
                        </tbody>

                    </table>                    

                </div>

            </div>
        </div>
    </section>
</div>

@section Scripts {    
    <script>
        Web.Companies.FilterGrid();
    </script>
}