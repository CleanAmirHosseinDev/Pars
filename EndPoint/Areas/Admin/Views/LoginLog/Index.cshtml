@{
    ViewData["Title"] = "ورود و خروج کاربران";
}

@section PageHeader {
    <section class="content-header">
        <h1>ورود و خروج کاربران</h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/LoginLog/Index"><i></i> ورود و خروج کاربران</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                <div class="portlet-title">
                    <div class="box-header clearfix">
                        <div class="tools" style="float: left; margin-top: -20px; margin-bottom: 10px;">
                            <a href="#" class="collapse" title="Collapse"><i class="fa fa-minus"></i></a>
                        </div>
                    </div>
                </div>
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>

            <div class="box-body">

                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <span id="TotalRowRep" name="TotalRowRep">کادر جستجو</span>
                    </div>
                    <div class="panel-body">
                        <div class="row mb-2">
                            <div class="col-md-6">
                                <input type="text" id="txtSearch" class="form-control fontForAllPage BorderRadius_30" placeholder="جستجو" />
                            </div>
                            <div class="col-md-6">
                                <select class="form-control BorderRadius_30" id="cboSelectCount">
                                    <option value="5">5</option>
                                    <option value="10" selected>10</option>
                                    <option value="20">20</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                    <option value="150">150</option>
                                    <option value="200">200</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-6">
                                <label>از تاریخ:</label>
                                <input type="text" id="FromDateStr" name="FromDateStr" class="form-control DatePicker" />
                            </div>
                            <div class="col-md-6">
                                <label>تا تاریخ:</label>
                                <input type="text" id="ToDateStr" name="ToDateStr" class="form-control DatePicker" />
                            </div>
                        </div>
                        <button class="btn btn-primary fontForAllPage mt-2" type="button" id="btnSearch" title="جستجو">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>

                <input type="hidden" id="SortOrderHidden" value="" />

                <div class="table-scroll-wrapper" style="max-height: 500px; overflow-y: auto; overflow-x: auto; border: 1px solid #ccc; margin-top: 15px; border-radius: 6px;">
                    <table class="table table-bordered table-striped" style="min-width: 800px;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th class="cursorPointer sortable" data-column="FullName">
                                    کاربر
                                    <i class="sort-icon fa" style="margin-right: 5px;"></i>
                                </th>
                                <th class="cursorPointer sortable" data-column="LoginDate">
                                    تاریخ ورود
                                    <i class="fa fa-arrow-down" style="display:none;"></i>
                                </th>
                                <th class="cursorPointer sortable" data-column="SignOutDate">
                                    تاریخ خروج
                                    <i class="fa fa-arrow-down" style="display:none;"></i>
                                </th>
                                <th>
                                    آیپی
                                </th>
                                <th class="cursorPointer sortable" data-column="AreaName">
                                    نقش کاربر
                                    <i class="fa fa-arrow-down" style="display:none;"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tBodyList"></tbody>
                    </table>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <div class="pagination-container">
                            <ul class="pagination" id="pagination"></ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>



@section Styles {
    <link rel="stylesheet" href="~/lib/JQueryDatePickerPluginForPersian/css/persianDatepicker-default.css" asp-append-version="true">
}

@section Scripts {
    <script src="~/lib/JQueryDatePickerPluginForPersian/js/persianDatepicker.js" asp-append-version="true"></script>
    <script>
        Web.LoginLog.FilterGrid();
        Web.LoginLog.InitLoginLog();
    </script>
}
