

@{
    Layout = null;
}


<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پارس کیان | ورود و ثبت نام</title>
    <meta name="copyright" content="پارس کیان" />
    <link rel="alternate" href="https://parscrc.ir/" hreflang="fa" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta name="rating" content="General" />
    <meta name="revisit-after" content="7 days" />
    <meta http-equiv="Expires" content="0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="language" content="fa" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <link rel="canonical" href="https://parscrc.ir/" />
    <link rel="stylesheet" href="~/lib/font/vazir.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing/site.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
</head>
<body>
    <div style="box-shadow: 0 0 2px 2px #ffffff50; height: 70px;width: 350px;    margin: 10px;    border-radius: 12px;    background: #0b2544;color: white !important;z-index: 100;display: flex;justify-content: center;align-items: center;">
        <a href="/" style="display: flex;color: white;">
            <img src="~/image/landing/logo.png" style="filter: brightness(1.4);height: 70px;">
            <div style=" display: flex;  flex-direction: column;   margin-left: 25px;">
                <span>شرکت رتبه بندی اعتباری </span><span style="font-size: 1.7em;font-weight: 900;">پـــارس کــیــان</span>
            </div>
        </a>



    </div>
    <div class="form-structor">
        <div class="signup">
            <h2 class="form-title" id="signup"><span>یا</span>به حساب کاربری خود وارد شوید</h2>
            <div class="form-holder">
                <input type="email" class="input" placeholder="شماره تلفن همراه" />
                <input type="password" class="input" placeholder="رمز عبور" />
            </div>
            <button class="submit-btn">ورود</button>
        </div>
        <div class="login slide-up">
            <div class="center">
                <h2 class="form-title" id="login"><span>یا</span>ثبت نام کنید</h2>
                <div id="step1">
                    <div class="form-holder">
                        <input type="text" class="input" placeholder="شماره تلفن همراه" />
                        <input type="password" class="input" placeholder="رمز عبور" />
                        <input type="password" class="input" placeholder="تکرار رمز عبور" />
                    </div>
                    <button class="submit-btn" onclick="sendVerifCode()">ارسال کد فعال سازی</button>
                </div>

                <div id="step2" style="display:none;">
                    <p>کد فعال سازی ارسال شده به شماره خود را وارد نمایید.</p>
                    <div class="form-holder">
                        <input type="text" class="input" placeholder="کد فعالسازی ارسال شده" />
                    </div>
                    <button class="submit-btn">ثبت کد</button>
                    <button class="submit-btn" style=" background-color: #06222a;" onclick="goToFirstPage()">اصلاح شماره</button>
                </div>

            </div>
        </div>
    </div>



    <style>
        html, body { height: 100%; flex-direction: column; position: relative; width: 100%; background: linear-gradient(rgb(18 59 107), rgb(3, 8, 16)); display: flex; align-items: center; justify-content: center; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; background-image: url(/image/landing/contactus.jpg); background-size: cover; background-position: center; background-repeat: no-repeat; }
        .form-structor { background-color: #222; box-shadow: 0 0 2px 2px #ffffff50; border-radius: 15px; height: 550px; width: 350px; position: relative; overflow: hidden; }
            .form-structor::after { content: ""; opacity: 0.6; position: absolute; top: 0; right: 0; bottom: 0; left: 0; background-repeat: no-repeat; background-position: top; background-size: 700px; background-image: url(/image/landing/login_card.png); }
            .form-structor .signup { position: absolute; top: 50%; left: 50%; -webkit-transform: translate(-50%, -50%); width: 65%; z-index: 5; -webkit-transition: all 0.3s ease; position: absolute; background: #00000080; box-shadow: 0 0 17px 6px #000000a8; border-radius: 15px; }
                .form-structor .signup.slide-up { top: 5%; -webkit-transform: translate(-50%, 0%); -webkit-transition: all 0.3s ease; }
                    .form-structor .signup.slide-up .form-holder, .form-structor .signup.slide-up .submit-btn { opacity: 0; visibility: hidden; }
                    .form-structor .signup.slide-up .form-title { font-size: 1em; cursor: pointer; }
                        .form-structor .signup.slide-up .form-title span { margin-left: 5px; opacity: 1; display: initial; -webkit-transition: all 0.3s ease; }
                .form-structor .signup .form-title { color: #fff; font-size: 1.7em; text-align: center; }
                    .form-structor .signup .form-title span { color: #aaaaaa; display: none; -webkit-transition: all 0.3s ease; }
                .form-structor .signup .form-holder { border-radius: 15px; background-color: #fff; overflow: hidden; margin-top: 50px; opacity: 1; visibility: visible; -webkit-transition: all 0.3s ease; }
                    .form-structor .signup .form-holder .input { border: 0; outline: none; box-shadow: none; display: block; height: 40px; line-height: 30px; padding: 7px 15px; border-bottom: 1px solid #eee; width: 100%; font-size: 15px; }
                        .form-structor .signup .form-holder .input:last-child { border-bottom: 0; }
                        .form-structor .signup .form-holder .input::-webkit-input-placeholder { color: rgba(0, 0, 0, 0.4); }
                .form-structor .signup .submit-btn { background-color: var(--nv-color1); color: white; border: 0; border-radius: 15px; display: block; margin: 15px auto; padding: 15px 45px; width: 100%; font-size: 13px; font-weight: bold; cursor: pointer; opacity: 1; visibility: visible; -webkit-transition: all 0.3s ease; }
                    .form-structor .signup .submit-btn:hover { transition: all 0.3s ease; opacity:0.9; }
            .form-structor .login { position: absolute; top: 20%; left: 0; right: 0; bottom: 0; background-color: #fff; z-index: 5; -webkit-transition: all 0.3s ease; }
                .form-structor .login::before { content: ""; position: absolute; left: 50%; top: -20px; -webkit-transform: translate(-50%, 0); background-color: #fff; width: 200%; height: 250px; border-radius: 50%; z-index: 4; -webkit-transition: all 0.3s ease; }
                .form-structor .login .center { position: absolute; top: calc(50% - 10%); left: 50%; -webkit-transform: translate(-50%, -50%); width: 65%; z-index: 5; -webkit-transition: all 0.3s ease; }
                    .form-structor .login .center .form-title { margin: 0; color: #000; font-size: 1.7em; text-align: center; }
                        .form-structor .login .center .form-title span { color: #aaaaaa; opacity: 0; display: none; -webkit-transition: all 0.3s ease; }
                    .form-structor .login .center .form-holder { border-radius: 15px; background-color: #fff; border: 1px solid #c4c4c4; overflow: hidden; margin: 25px 0; opacity: 1; visibility: visible; -webkit-transition: all 0.3s ease; }
                        .form-structor .login .center .form-holder .input { border: 0; outline: none; box-shadow: none; display: block; height: 40px; line-height: 30px; padding: 7px 15px; border-bottom: 1px solid #eee; width: 100%; font-size: 15px; }
                            .form-structor .login .center .form-holder .input:last-child { border-bottom: 0; }
                            .form-structor .login .center .form-holder .input::-webkit-input-placeholder { color: rgba(0, 0, 0, 0.4); }
                    .form-structor .login .center .submit-btn { background-color: var(--nv-color1); color: white; border: 0; border-radius: 15px; display: block; margin: 15px auto; padding: 15px 45px; width: 100%; font-size: 13px; font-weight: bold; cursor: pointer; opacity: 1; visibility: visible; -webkit-transition: all 0.3s ease; }
                        .form-structor .login .center .submit-btn:hover { transition: all 0.3s ease; opacity: 0.9; }
                .form-structor .login.slide-up { top: 90%; -webkit-transition: all 0.3s ease; }
                    .form-structor .login.slide-up .center { top: 10%; -webkit-transform: translate(-50%, 0%); -webkit-transition: all 0.3s ease; }
                    .form-structor .login.slide-up .form-holder, .form-structor .login.slide-up .submit-btn { opacity: 0; visibility: hidden; -webkit-transition: all 0.3s ease; }
                    .form-structor .login.slide-up .form-title { font-size: 1em; margin: 0; padding: 0; cursor: pointer; -webkit-transition: all 0.3s ease; }
                        .form-structor .login.slide-up .form-title span { margin-left: 5px; opacity: 1; display: initial; -webkit-transition: all 0.3s ease; }
    </style>

    <script>
        console.clear();

        const loginBtn = document.getElementById('login');
        const signupBtn = document.getElementById('signup');

        loginBtn.addEventListener('click', (e) => {
            let parent = e.target.parentNode.parentNode;
            Array.from(e.target.parentNode.parentNode.classList).find((element) => {
                if (element !== "slide-up") {
                    //parent.classList.add('slide-up')
                } else {
                    signupBtn.parentNode.classList.add('slide-up')
                    parent.classList.remove('slide-up')
                }
            });
        });

        signupBtn.addEventListener('click', (e) => {
            let parent = e.target.parentNode;
            Array.from(e.target.parentNode.classList).find((element) => {
                if (element !== "slide-up") {
                    //parent.classList.add('slide-up')
                } else {
                    loginBtn.parentNode.parentNode.classList.add('slide-up')
                    parent.classList.remove('slide-up')
                }
            });
        });

        function sendVerifCode() {
            $("#step1").hide();
            $("#step2").fadeIn();
        }
        function goToFirstPage() {
            $("#step2").hide();
            $("#step1").fadeIn();
        }
    </script>
</body>
</html>
