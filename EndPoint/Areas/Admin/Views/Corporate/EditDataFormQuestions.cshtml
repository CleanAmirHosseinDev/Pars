
@{
    ViewData["Title"] = "ثبت سوال";
}

@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
}

@section PageHeader{
    <section class="content-header">
        <h1>
            ثبت سوال
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/Corporate/DataFormQuestions"><i></i>سوالات</a></li>
            <li class="active"><a href="/Admin/Corporate/EditDataFormQuestions@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i> ثبت سوال</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">
                <form action="/Admin/Corporate/DataFormQuestions" id="frmFormMain" method="post">
                    <div class="form-horizontal">
                            <input type="hidden" value="@ViewBag.id" id="DataFormQuestionId" name="DataFormQuestionId" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        دسته فرعی سوال
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select name="DataForms" id="DataForms" class="form-control select2" style="width:100% !important;">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        متن سوال
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="QuestionText" id="QuestionText" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        نام سوال
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="QuestionName" id="QuestionName" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        نوع سوال
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select name="QuestionType" id="QuestionType" class="form-control select2" style="width:100% !important;">
                                            <option value="yesNo">بله/خیر</option>
                                            <option value="select">لیکرتی</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        جایگاه سوال
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                            <input onkeypress="return TextBoxOnlyNumber(event);" type="text" class="form-control" name="QuestionOrder" id="QuestionOrder" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        نمره سوال
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                            <input type="text" class="form-control" name="Score" id="Score" onkeypress="return TextBoxOnlyNumber(event); " />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        متن راهنما سوال
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="HelpText" id="HelpText" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-9">
                                        <button title="ثبت" class="btn btn-info fontForAllPage" onclick="Web.Corporate.SaveDataFormQuestions(this);">
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/css/GlobalAreas/bower_components/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>    
    <script>
        Web.Corporate.InitDataFormQuestions(@ViewBag.id);
    </script>
}
