@{
    ViewData["Title"] = "ثبت مدارک مورد نیاز";
}

@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
}

@section PageHeader{
    <section class="content-header">
        <h1>
            ثبت مدارک مورد نیاز
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/Corporate/DataFormDocument"><i></i>مدارک مورد نیاز</a></li>
            <li class="active"><a href="/Admin/Corporate/EditDataFormDocument@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i>ثبت مدارک مورد نیاز</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">
                <form action="/Admin/Corporate/DataFormDocument" id="frmFormMain" method="post">
                    <div class="form-horizontal">
                        <input type="hidden" value="@ViewBag.id" id="DataFormDocumentId" name="DataFormDocumentId" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        عنوان مدرک
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="Title" id="Title" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        دسته
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select name="CategoryId" id="CategoryId" class="form-control select2" style="width:100% !important;">
                                            <option value="287">حقوق و رفتار عادلانه با سهامدار</option>
                                            <option value="288">نقش ذینفعان</option>
                                            <option value="289">افشاء و شفافیت</option>
                                            <option value="290">مسئولیت های هیئت مدیره</option>
                                        </select>
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        متن راهنما
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="HelpText" id="HelpText" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-9">
                                        <button title="ثبت" class="btn btn-info fontForAllPage" onclick="Web.Corporate.SaveDataFormDocument(this);">
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/css/GlobalAreas/bower_components/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>    
    <script>
        Web.Corporate.InitDataFormDocument(@ViewBag.id);
    </script>
}
