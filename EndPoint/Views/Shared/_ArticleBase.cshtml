        @RenderBody()
        
    </div>

    <div class="center">
    </div>
    <div class="left">
        <div class="left_sec_item">
            <div class="title">
                <h4>جستجو</h4>
            </div>
            <div class="item">
                <div class="search_bar">
                    <input type="text" placeholder="جستجو..." />
                    <a class="jbtn" href="#" onclick="">جستجو</a>
                </div>
            </div>
        </div>
        <div class="left_sec_item">
            <div class="title">
                <h4><a href="/Article/NewsList">خبر های تازه</a></h4>
            </div>
            <div class="item">
                @if(ViewData["NewNews"] != null) {
                    @foreach(var item in (IEnumerable<ParsKyanCrm.Application.Dtos.BasicInfo.NewsAndContentDto>)ViewData["NewNews"]) {
                <a href="/Article/News/@item.ContentId">@item.Title<span>(@item.DatePersianShortDate)</span></a>
                    }

                }
            </div>
        </div>
                <div class="left_sec_item">
            <div class="title">
                <h4><a href="/Article/ContentList">مقالات تازه</a></h4>
            </div>
            <div class="item">
                @if(ViewData["NewContent"] != null) {
                    @foreach(var item in (IEnumerable<ParsKyanCrm.Application.Dtos.BasicInfo.NewsAndContentDto>)ViewData["NewContent"]) {
                <a href="/Article/Content/@item.ContentId">@item.Title<span>(@item.DatePersianShortDate)</span></a>
                    }

                }
            </div>
        </div>
        <div class="left_sec_item">
            <div class="title">
                <h4>دسته بندی ها</h4>
            </div>
            <div class="item" style="font-size: 18px;">
                <a href="/Article/NewsList">خبرها</a>
                <a href="/Article/ContentList">مقالات</a>
            </div>
        </div>
        <br />

    </div>
</section>


