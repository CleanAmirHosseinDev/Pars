@{
    ViewData["Title"] = "ثبت درخواست";
}


@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
  
}

@section PageHeader{
    <section class="content-header">
        <h1>
            ثبت درخواست
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Customer"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Customer/RequestForRating/Index"><i></i>مشاهده درخواست ها</a></li>
            <li class="active"><a href="/Customer/RequestForRating/EditRequestForRating@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i>ثبت درخواست</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">


                <form action="/Customer/RequestForRating/Index" id="frmFormMain" method="post">
                    <div class="form-horizontal">

                        <section >
                            <h3>درخواست خدمات</h3>
                            <p> لطفا از گزینه های زیر درخواست خدمات خود را انتخاب کنید.</p>
                            
                        </section>
                        <input type="hidden" value="0" id="RequestId" name="RequestId" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="">
                                        نوع درخواست
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-8">
                                        <select name="TypeServiceRequestedId" id="TypeServiceRequestedId" class="form-control select2" style="width:100% !important;"></select>
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-md-4">

                                    </div>
                                    <div class="col-md-8">
                                        <button title="ثبت " class="btn btn-info fontForAllPage" onclick="Web.RequestForRating.SaveRequestForRating(this);">
                                            ثبت   <i class="fa fa-print"></i>
                                        </button>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-6"></div>
                        </div>

                    </div>
                </form>


            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/css/GlobalAreas/bower_components/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>
    <script>
        Web.RequestForRating.InitRequestForRating();
    </script>
}
