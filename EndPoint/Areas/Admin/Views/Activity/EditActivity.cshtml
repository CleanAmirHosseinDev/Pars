
@{
    ViewData["Title"] = "ثبت فعالیت شرکت ها";
}

@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
    <link href="~/lib/cropperjs/cropper.css" rel="stylesheet" />
}

@section PageHeader{
    <section class="content-header">
        <h1>
            ثبت فعالیت شرکت ها
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Admin/Activity/Index"><i></i> فعالیت شرکت ها</a></li>
            <li class="active"><a href="/Admin/Activity/EditActivity@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i> ثبت فعالیت شرکت ها</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">


                <form action="/Admin/Activity/Index" id="frmFormMain" method="post">
                    <div class="form-horizontal">

                        <input type="hidden" value="0" id="ActivityId" name="ActivityId" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        عنوان فعالیت
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select name="ActivityTitle" id="ActivityTitle" class="form-control select2" style="width:100% !important;"></select>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        شرح  فعالیت
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <textarea class="form-control" name="ActivityComment" id="ActivityComment"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        عکس یک
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="hidden" id="hid_Picture1" value="" />                                        
                                        <input type="file" name="Picture1" id="Picture1" accept="image/*" onchange="onChangePicCropper(this,1200,'imgUpload_Picture1','hid_Picture1');" />
                                        <img src="" width="150" class="img-thumbnail" id="imgUpload_Picture1" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="">
                                        عکس دو
                                        <span class="RequiredLabel">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input type="hidden" id="hid_Picture2" value="" />                                        
                                        <input type="file" name="Picture2" id="Picture2" accept="image/*" onchange="onChangePicCropper(this,1200,'imgUpload_Picture2','hid_Picture2');" />
                                        <img src="" width="150" class="img-thumbnail" id="imgUpload_Picture2" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3">

                                    </div>
                                    <div class="col-md-9">
                                        <button title="ثبت" class="btn btn-info fontForAllPage" onclick="Web.Activity.SaveActivity(this);">
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6"></div>
                        </div>

                    </div>
                </form>


            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/css/GlobalAreas/bower_components/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>
    <script src="~/lib/cropperjs/cropper.js" asp-append-version="true"></script>
    <script src="~/lib/cropperjs/cropperOpp.js" asp-append-version="true"></script>
    <script>
        Web.Activity.InitActivity(@ViewBag.id);
    </script>
}
