
@{
    ViewData["Title"] = "ارجاع";
}

@section Styles{
    <link rel="stylesheet" href="~/css/GlobalAreas/bower_components/select2/dist/css/select2.min.css" asp-append-version="true">
}

@section PageHeader{
    <section class="content-header" id="phch">
        <h1>
            ارجاع
        </h1>
        <ol class="breadcrumb">
            <li><a href="/SuperVisor"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/SuperVisor/RequestForRating/Index"><i></i> درخواست ها</a></li>
            <li class="active"><a href="/SuperVisor/RequestForRating/Referral/@(ViewBag.id == null || ViewBag.id == 0 ?"":ViewBag.id)"><i></i> ارجاع</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12" id="divMAS">
    </section>
</div>

@section Scripts {
    <script src="~/css/GlobalAreas/bower_components/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        $(document).ready(function () {
            $('input[type=text]').each(function () {
                var text_classname = $(this).attr('name');
                var value = $(this).text();
                var new_html = ('<label for="' + text_classname + '" id="' + '">' + value + '</label>')
                $(this).replaceWith(new_html);
            });
            // $(this).attr('hidden', 'true');
        })



    </script>
    <script>
        Web.RequestForRating.InitReferral(@ViewBag.id);
    </script>
}

