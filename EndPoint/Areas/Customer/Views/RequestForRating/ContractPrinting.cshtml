@{
    ViewData["Title"] = "مشاهده قرارداد";
}


@section Styles{

}

@section PageHeader{
    <section class="content-header">
        <h1>
            مشاهده قرارداد
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Customer"><i class="fa fa-dashboard"></i> داشبورد</a></li>
            <li><a href="/Customer/RequestForRating/Index"><i></i>مشاهده درخواست ها</a></li>
            <li class="active"><a href="/Customer/RequestForRating/ContractPrinting@(ViewBag.id == null || ViewBag.id == 0 ?"":"?id="+ViewBag.id)"><i></i> مشاهده قرارداد</a></li>
        </ol>
    </section>
}

<div class="row">
    <section class="col-lg-12 col-md-12">
        <div class="box box-info">
            <div class="box-header">
                @*<i class="fa fa-cloud"></i>*@
                <h3 class="box-title">
                    <div class="portlet-title">
                        <div class="caption font-green-haze">
                            @*<span class="caption-subject bold uppercase">آب و هوا</span>*@
                        </div>
                        <div class="tools">
                            <a href="" class="collapse" data-original-title="" title="">
                            </a>
                        </div>
                    </div>
                </h3>
                <!-- tools box -->
                <div class="pull-left box-tools">
                    <button type="button" class="btn bg-info btn-sm" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <div class="box-body" style="">


                <form action="/Customer/RequestForRating/Index" id="frmFormMain" method="post">
                    <div class="form-horizontal">
                        <div style="width:100%;border:1px solid silver;min-height:400px;margin-bottom:15px">

                        </div>
                        <input type="hidden" value="0" id="RequestId" name="RequestId" />

                        <div class="row">
                            <div class="col-md-6">
                                

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <a title="درخواست اصلاحیه قرارداد" class="btn btn-info fontForAllPage" href="/Customer/RequestForRating/EditContract?id=@ViewBag.id">
                                            درخواست اصلاحیه قرارداد  <i  class="fa fa-print"></i>
                                        </a>
                                        <a title="تایید قرارداد و بارگذاری مدارک" class="btn btn-info fontForAllPage" href="/Customer/RequestForRating/ConfirmContract?id=@ViewBag.id">
                                            تایید قرارداد و بارگذاری مدارک  <i class="fa fa-file-text-o"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6"></div>
                        </div>

                    </div>
                </form>


            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        Web.RequestForRating.InitRequestForRating(@ViewBag.id);
    </script>
}
